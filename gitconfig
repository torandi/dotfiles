[alias]
	tree = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short --decorate
	unstage = reset HEAD --
	co = checkout
	br = branch
	ci = commit
	st = status -s
	last = log -1 HEAD
	recent = log -10 --oneline --graph
	visual = !gitk
	list = log --pretty=oneline

[core]
	excludesfile = ~/.gitignore
	autocrlf = input

[config]
	autocrlf = input

